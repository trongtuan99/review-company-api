/* Hero Section - Enhanced Design */
.hero-section {
  position: relative;
  background: linear-gradient(135deg, var(--hero-bg-start) 0%, var(--hero-bg-mid) 50%, var(--hero-bg-end) 100%);
  padding: 50px 24px 40px;
  text-align: center;
  overflow: hidden;
  width: 100vw;
  margin-left: calc(-50vw + 50%);
  transition: background 0.3s ease;
}

/* Background Decorations */
.hero-bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  pointer-events: none;
}

.hero-circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.3;
}

.hero-circle-1 {
  width: 400px;
  height: 400px;
  background: linear-gradient(135deg, var(--glassdoor-green) 0%, #4ade80 100%);
  top: -150px;
  right: -50px;
  animation: float 20s ease-in-out infinite;
}

.hero-circle-2 {
  width: 300px;
  height: 300px;
  background: linear-gradient(135deg, #86efac 0%, #4ade80 100%);
  bottom: -80px;
  left: -80px;
  animation: float 15s ease-in-out infinite reverse;
}

.hero-circle-3 {
  width: 200px;
  height: 200px;
  background: linear-gradient(135deg, var(--glassdoor-green) 0%, #22c55e 100%);
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  animation: pulse-slow 10s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  50% { transform: translateY(-30px) rotate(5deg); }
}

@keyframes pulse-slow {
  0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.3; }
  50% { transform: translate(-50%, -50%) scale(1.1); opacity: 0.4; }
}

.hero-content {
  max-width: 900px;
  margin: 0 auto 28px;
  position: relative;
  z-index: 1;
}

/* Hero Badge */
.hero-badge {
  display: inline-flex;
  align-items: center;
  gap: 8px;
