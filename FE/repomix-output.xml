              <Link to={`/companies/${review.company_id}`}>
                {review.company?.name || 'C√¥ng ty'}
              </Link>
            </div>
            <div className="recent-review-content">
              <p>{review.title}</p>
              <div className="review-excerpt">
                {review.reviews_content?.substring(0, 100)}
