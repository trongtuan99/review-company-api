# Docker Environment Variables Example
# Copy this file to .env and modify as needed

# Rails Environment
RAILS_ENV=development

# Database
DATABASE_URL=postgresql://postgres:password@db:5432/review_company_development
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=review_company_development

# Redis
REDIS_URL=redis://redis:6379/0

# Kafka
KAFKA_BROKERS=kafka:9092

# JWT Authentication
JWT_SECRET=your_jwt_secret_change_in_production

# Multi-tenant (Apartment)
APARTMENT_EXCLUDED_MODELS=User,Role,Area

# Background Job Flags
ENABLE_DELETE_USER=1
ENABLE_FIND_AND_DESTROY_COMPANY=1
ENABLE_FIND_AND_DESTROY_REVIEW=1

# Frontend
VITE_API_URL=http://localhost:3000
